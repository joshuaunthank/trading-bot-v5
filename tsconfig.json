	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.*", "local_modules/**/*.*"]
}
