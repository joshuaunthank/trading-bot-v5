{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx"
	},
	"include": ["src/**/*.*", "server.ts", "local_modules/**/*.*"],
	"exclude": ["node_modules", "dist"]
}
