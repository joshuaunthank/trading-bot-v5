# Trading Bot Configuration

# Server configuration
PORT=3001

# Binance API configuration (required for live trading)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Default trading parameters
DEFAULT_SYMBOL=BTC/USDT
DEFAULT_TIMEFRAME=4h
DEFAULT_LIMIT=1000

# Strategy parameters
ARIMA_ORDER=4
MACD_FAST=10
MACD_SLOW=30
MACD_SIGNAL=5
EMA5_WINDOW=5
EMA10_WINDOW=10
EMA30_WINDOW=30

# Validation settings
VALIDATION_ENABLED=true
STRATEGY_AUTO_FIX=false

# File-based strategy store settings
STRATEGY_STORE_ENABLED=true
STRATEGY_STORE_BACKUP_ENABLED=true
STRATEGY_STORE_BACKUP_DIR=backup

# Security settings
JWT_SECRET=change_this_to_a_secure_secret_key
SESSION_TIMEOUT_MINUTES=60
