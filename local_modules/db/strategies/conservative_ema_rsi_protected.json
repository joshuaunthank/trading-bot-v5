				{
					"indicator": "ema_fast",
					"field": "ema_12",
					"operator": "<",
					"compare_to": "ema_slow.ema_26",
					"lookback": 0
				},
				{
					"indicator": "ema_fast",
					"field": "ema_12",
					"operator": "<",
					"compare_to": "ema_slow.ema_26",
