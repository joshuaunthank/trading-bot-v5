	"indicators": [
		{
			"id": "ema_fast",
			"name": "Fast EMA",
			"type": "EMA",
			"source": "close",
			"parameters": { "period": 12 },
			"output_fields": ["ema_12"]
		},
		{
			"id": "ema_slow",
			"name": "Slow EMA",
			"type": "EMA",
			"source": "close",
			"parameters": { "period": 26 },
			"output_fields": ["ema_26"]
		},
		{
			"id": "rsi",
			"name": "RSI",
			"type": "RSI",
			"source": "close",
			"parameters": { "period": 14 },
			"output_fields": ["rsi_14"]
		},
		{
			"id": "volume_sma",
			"name": "Volume SMA",
			"type": "SMA",
			"source": "volume",
			"parameters": { "period": 20 },
			"output_fields": ["volume_sma_20"]
		}
