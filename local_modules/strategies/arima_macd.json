{
	"name": "ARIMA_MACD",
	"description": "ARIMA+MACD strategy with configurable AR order and MACD parameters.",
	"configSchema": {
		"symbol": {
			"type": "string",
			"default": "BTC/USDT",
			"description": "Trading pair symbol"
		},
		"timeframe": {
			"type": "string",
			"default": "4h",
			"description": "Candle timeframe"
		},
		"limit": {
			"type": "number",
			"default": 1000,
			"min": 50,
			"max": 1000,
			"description": "Number of candles to fetch"
		},
		"macdFast": {
			"type": "number",
			"default": 12,
			"min": 1,
			"max": 50,
			"description": "MACD fast EMA period"
		},
		"macdSlow": {
			"type": "number",
			"default": 26,
			"min": 1,
			"max": 100,
			"description": "MACD slow EMA period"
		},
		"macdSignal": {
			"type": "number",
			"default": 9,
			"min": 1,
			"max": 50,
			"description": "MACD signal EMA period"
		},
		"arOrder": {
			"type": "number",
			"default": 4,
			"min": 1,
			"max": 10,
			"description": "AR lag order for ARIMA"
		},
		"startingBalance": {
			"type": "number",
			"default": 1000,
			"min": 1,
			"description": "Starting balance for simulation"
		},
		"positionSize": {
			"type": "number",
			"default": 1,
			"min": 0.01,
			"max": 1,
			"description": "Position size as fraction of balance"
		},
		"allowShort": {
			"type": "boolean",
			"default": false,
			"description": "Allow short trades"
		}
	}
}
