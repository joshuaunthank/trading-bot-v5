{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Strategy Configuration",
	"type": "object",
	"properties": {
		"id": { "type": "string" },
		"name": { "type": "string" },
		"description": { "type": "string" },
		"symbol": { "type": "string" },
		"timeframe": { "type": "string" },
		"tags": {
			"type": "array",
			"items": { "type": "string" }
		},
		"enabled": { "type": "boolean" },
		"indicators": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"type": { "type": "string" },
					"source": { "type": "string" },
					"parameters": { "type": "object" },
					"output_fields": {
						"type": "array",
						"items": { "type": "string" }
					},
					"modifiers": {
						"type": "object",
						"properties": {
							"lag": {
								"type": "object",
								"properties": {
									"enabled": { "type": "boolean" },
									"period": { "type": "number" }
								}
							},
							"normalize": {
								"type": "object",
								"properties": { "enabled": { "type": "boolean" } }
							},
							"rolling": {
								"type": "object",
								"properties": {
									"enabled": { "type": "boolean" },
									"window": { "type": "number" }
								}
							}
						}
					},
					"enabled": { "type": "boolean" }
				},
				"required": ["id", "name", "type", "parameters"]
			}
		},
		"models": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"type": { "type": "string" },
					"subtype": { "type": "string" },
					"input_fields": { "type": "array", "items": { "type": "string" } },
					"output_field": { "type": "string" },
					"parameters": { "type": "object" },
					"modifiers": { "type": "object" },
					"dependencies": { "type": "array", "items": { "type": "string" } },
					"training": { "type": "object" },
					"hyperparameters": { "type": "object" },
					"framework": { "type": "string" },
					"enabled": { "type": "boolean" }
				},
				"required": ["id", "type", "subtype", "input_fields", "output_field"]
			}
		},
		"postprocessing": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"type": { "type": "string", "const": "correction" },
					"model_type": { "type": "string" },
					"input_fields": { "type": "array", "items": { "type": "string" } },
					"output_field": { "type": "string" },
					"parameters": { "type": "object" }
				},
				"required": ["id", "type", "model_type", "input_fields", "output_field"]
			}
		},
		"signals": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"type": { "type": "string", "enum": ["entry", "exit"] },
					"side": { "type": "string", "enum": ["long", "short"] },
					"confidence": { "type": "number", "minimum": 0, "maximum": 1 },
					"logic": { "type": "string", "enum": ["AND", "OR"] },
					"conditions": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"indicator": { "type": "string" },
								"operator": {
									"type": "string",
									"enum": [
										"gt",
										"lt",
										"eq",
										"gte",
										"lte",
										"crossover",
										"crossunder"
									]
								},
								"value": {
									"oneOf": [{ "type": "number" }, { "type": "string" }]
								},
								"lookback": { "type": "number", "minimum": 1 }
							},
							"required": ["indicator", "operator", "value"]
						},
						"minItems": 1
					},
					"description": { "type": "string" }
				},
				"required": ["id", "name", "type", "logic", "conditions"]
			}
		},
		"risk": {
			"type": "object",
			"properties": {
				"position_size_type": { "type": "string" },
				"risk_per_trade": { "type": "number" },
				"stop_loss_percent": { "type": "number" },
				"take_profit_percent": { "type": "number" },
				"trailing_stop": { "type": "boolean" },
				"max_drawdown_percent": { "type": "number" }
			}
		},
		"version": { "type": "string" },
		"created_at": { "type": "string", "format": "date-time" },
		"last_updated": { "type": "string", "format": "date-time" }
	},
	"required": [
		"id",
		"name",
		"symbol",
		"timeframe",
		"indicators",
		"models",
		"signals",
		"risk"
	]
}
