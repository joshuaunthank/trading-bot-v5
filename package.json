{
	"name": "trading-bot-v5",
	"private": true,
	"version": "0.0.0",
	"description": "Modular TypeScript trading bot with WebSocket-only OHLCV data architecture",
	"scripts": {
		"dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
		"dev:frontend": "wait-on http://localhost:3001 && vite",
		"dev:backend": "ts-node server.ts",
		"build": "npm run clean-dist && npm run build:frontend && npm run build:backend && npm run copy-db-files",
		"clean-dist": "rm -rf dist && mkdir -p dist",
		"build:backend": "tsc --project tsconfig.server.json",
		"build:frontend": "vite build",
		"copy-db-files": "mkdir -p dist/local_modules/db/strategies dist/local_modules/db/indicators && cp local_modules/db/strategies/*.json dist/local_modules/db/strategies/ 2>/dev/null || true && cp local_modules/db/indicators/*.json dist/local_modules/db/indicators/ 2>/dev/null || true",
		"start": "node ./dist/server.js",
		"start-debug": "node debug-start.js",
		"type-check": "tsc --noEmit",
		"test": "echo \"Running all tests...\" && ./tests/run-all-tests.sh"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.11",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.2",
		"@types/jest": "^30.0.0",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"@vitejs/plugin-react": "^4.5.0",
		"ccxt": "^4.4.88",
		"concurrently": "^8.2.2",
		"cors": "*",
		"dotenv": "^16.5.0",
		"express": "*",
		"jest": "^29.7.0",
		"postcss": "^8.5.6",
		"ts-jest": "^29.4.0",
		"typescript": "~5.8.3",
		"uws": "^200.0.0",
		"vite": "^6.3.5",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.11",
		"@types/chart.js": "^2.9.41",
		"@types/cors": "*",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/ws": "^8.18.1",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"bcrypt": "^6.0.0",
		"chart.js": "^4.4.9",
		"chartjs-adapter-date-fns": "^3.0.0",
		"chartjs-chart-financial": "^0.2.1",
		"chartjs-plugin-zoom": "^2.2.0",
		"date-fns": "^4.1.0",
		"formidable": "^3.5.4",
		"jsonwebtoken": "^9.0.2",
		"jstat": "^1.9.6",
		"lucide-react": "^0.523.0",
		"pg": "^8.16.0",
		"react": "^19.1.0",
		"react-chartjs-2": "^5.3.0",
		"react-dom": "^19.1.0",
		"react-router-dom": "^6.30.1",
		"tailwindcss": "^4.1.11",
		"technicalindicators": "^3.1.0",
		"ts-node": "*",
		"typescript": "*",
		"ws": "^8.18.2"
	}
}
